<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Dark Theme: inherits from DayNight -->
    <style name="Base.Theme.FaceAttendanceApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Dark theme overrides -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accentOrange</item> <!-- Fixed key: it was 'orange' -->
        <item name="colorOnSecondary">@color/white</item>


        <!-- Surface & on-surface colors for cards, backgrounds, text -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>


        <!-- Optional: status bar styling -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

    </style>

    <!-- ðŸ”§ Must define the applied theme -->
    <style name="Theme.FaceAttendanceApp" parent="Base.Theme.FaceAttendanceApp" />

</resources>
