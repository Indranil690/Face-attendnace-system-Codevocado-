<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Employee Name -->
        <TextView
            android:id="@+id/tvEmployeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Employee Email -->
        <TextView
            android:id="@+id/tvEmployeeEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="employee@example.com"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Employee Designation -->
        <TextView
            android:id="@+id/tvEmployeeDesignation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Designation"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Employee ID -->
        <TextView
            android:id="@+id/tvEmployeeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee ID"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Department -->
        <TextView
            android:id="@+id/tvEmployeeDept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Phone -->
        <TextView
            android:id="@+id/tvEmployeePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Edit Icon -->
            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="Edit"
                app:tint="@android:color/holo_blue_dark" />

            <!-- Space between icons -->
            <View
                android:layout_width="16dp"
                android:layout_height="1dp" />

            <!-- Delete Icon -->
            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="Delete"
                app:tint="@android:color/holo_red_dark" />

            <!-- Space -->
            <View
                android:layout_width="16dp"
                android:layout_height="1dp" />

            <!-- QR Icon -->
            <ImageView
                android:id="@+id/ivGenerateQR"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/qr_code"
                android:contentDescription="Generate QR"
                app:tint="@android:color/holo_green_dark" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
