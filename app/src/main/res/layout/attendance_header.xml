<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?attr/colorSurface"> <!-- use theme surface color -->

    <TextView
        android:id="@+id/headerDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Date"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="?attr/colorOnSurface" /> <!-- use theme onSurface color -->

    <TextView
        android:id="@+id/headerInTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="In Time"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/headerOutTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Out Time"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/headerHours"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Hours"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/headerLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Location"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/headerStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Status"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="?attr/colorOnSurface" />

</LinearLayout>
